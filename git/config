[init]
	templatedir = ~/.config/git/template
	defaultBranch = main
[branch]
	sort = -committerdate
[commit]
	verbose = true
	template = ~/.config/git/message
	gpgsign = true
[color]
	ui = true
	pager = yes
[column]
	ui = auto
[core]
	attributesfile = ~/.config/git/attributes
[alias]
	ctags = !.git/hooks/ctags
	st = status
	co = checkout
	cm = commit -v
	pl = pull --rebase
	lg = log --graph --abbrev-commit --oneline
	lf = log --decorate --graph --all
	saveall = "!f() { git add -u; git commit -m \"${1-No message}\"; git push origin HEAD; } ; f"
	ammend = commit --amend --no-edit
	am = ammend
	todos = "!f() { git diff main HEAD | rg -C2 '^\\+.*TODO' ; } ; f"
	# `git log` with patches shown with difftastic.
	dl = -c diff.external=difft log -p --ext-diff

	# Show the most recent commit with difftastic.
	ds = -c diff.external=difft show --ext-diff

	# `git diff` with difftastic.
	dft = -c diff.external=difft diff
[user]
	name = Rob Young
	email = rob@robyoung.digital
	signingkey = 71FE652F9D11D3EE
[includeIf "gitdir:~/dev/turntown/"]
	path = ~/dev/turntown/.gitconfig-turntown
[merge]
	tool = nvim -d
	conflictstyle = diff3
[merge "mergiraf"]
	name = mergiraf
	driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L
[push]
	default = current
	autoSetupRemote = true
[pull]
    rebase = true
[fetch]
    prune = true
    pruneTags = true
[rebase]
    autoSquash = true
    autoStash = true
[help]
    autocorrect = prompt
[diff]
	algorithm = histogram
	colorMoved = plain
    mnemonicPrefix = true
    renames = true
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
