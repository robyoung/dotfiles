[init]
  templatedir = ~/.git_template
[core]
  editor = vim
  excludesfile = ~/.gitignore
[color]
  ui = true
[alias]
  ctags = !.git/hooks/ctags
  st = status
  co = checkout
  cm = commit -v
  pl = pull --rebase
  lg = log --graph --abbrev-commit --oneline
[user]
  name = Rob Young
  email = rob.young@digital.cabinet-office.gov.uk
[merge]
  tool = vimdiff
[push]
  default = simple
[url "git@github.com:"]
  insteadOf = https://github.com/
