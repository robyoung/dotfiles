[init]
  templatedir = ~/.git_template
[core]
  editor = nvim
  excludesfile = ~/.gitignore
  pager = delta
[color]
  ui = true
[alias]
  ctags = !.git/hooks/ctags
  st = status
  co = checkout
  cm = commit -v
  pl = pull --rebase
  lg = log --graph --abbrev-commit --oneline
  lf = log --decorate --graph --all
  saveall = "!f() { git add -u; git commit -m \"${1-No message}\"; git push origin HEAD; } ; f"
[user]
  name = Rob Young
  email = rob@robyoung.digital
[includeIf "gitdir:~/dev/turntown/"]
  path = .gitconfig-turntown
[merge]
  tool = nvim -d
  conflictstyle = diff3
[push]
  default = upstream
[pull]
  ff = only
[url "git@github.com:"]
  pushInsteadOf = https://github.com/
  pushInsteadOf = git://github.com/
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[delta]
  plus-color = "#012800"
  minus-color = "#340001"
  syntax-theme = Monokai Extended
  line-numbers = true
  side-by-side = false
[interactive]
  diffFilter = delta --color-only
