set ai
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
filetype plugin indent on

set nowrap
set ruler
set number

syntax on

let mapleader=","
map <Leader>t :NERDTree<CR>

" Useful key mappings
" <C-w>c close window
" <C-w>_ maximise window
" <C-w>r rotate windows
"
" Useful help
" :help index  - index of key mappings
