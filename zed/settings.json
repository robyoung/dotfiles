// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  "terminal": {
    "dock": "bottom",
    "font_family": "FiraCode Nerd Font",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "project_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "confirm_quit": true,
  "preferred_line_length": 120,
  "relative_line_numbers": true,
  "ui_font_size": 16,
  "cursor_blink": false,
  "vim_mode": true,
  "buffer_font_size": 11.0,
  "theme": {
    "dark": "Colorizer",
    "light": "One Light",
    "mode": "dark"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "format_on_save": "on",
  "assistant": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "version": "2",
    "provider": null
  },
  "jupyter": {
    "enabled": true
  },
  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          "pycodestyle": {
            "enabled": false
          }
        }
      }
    },
    "pyright": {
      "binary": {
        "ignore_system_version": true
      }
    }
  }
}
